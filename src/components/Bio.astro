---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const { author } = Astro.props;

import profileImage from "../assets/profile_icon.png";
---

<div class="profile">
  <Image src={profileImage} alt="profile image" class="profileIcon" />
  <h3><a href="/about" class="myname">{author}</a></h3>
  <p>
    <a href="https://github.com/mjun0812" class="iconLink">
      <Icon name="mdi:github" />
    </a>
    <a href="https://twitter.com/mjun0812" class="iconLink">
      <Icon name="fa6-brands:x-twitter" />
    </a>
  </p>
  <p>
    <svg
      aria-hidden="true"
      focusable="false"
      data-prefix="fas"
      data-icon="map-marker-alt"
      class="svg-inline--fa fa-map-marker-alt fa-w-12"
      role="img"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 384 512"
      width="32"
      height="32"
    >
      <path
        fill="currentColor"
        d="M172.268 501.67C26.97 291.031 0 269.413 0 192 0 85.961 85.961 0 192 0s192 85.961 192 192c0 77.413-26.97 99.031-172.268 309.67-9.535 13.774-29.93 13.773-39.464 0zM192 272c44.183 0 80-35.817 80-80s-35.817-80-80-80-80 35.817-80 80 35.817 80 80 80z"
      ></path>
    </svg>
    Tokyo, Japan
  </p>
  <p class="profileDescription">
    Computer VisionとWeb
    <br />
    に興味があります
  </p>
</div>

<style lang="scss">
  .myname {
    color: var(--accent-color);
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }

  .profile {
    background-color: var(--card-color);
    border: solid 1px var(--shadow-color);
    font-family: $english-font;
    text-align: center;
    padding: 1rem;
    border-radius: 15px;
    // position: sticky;
    // top: 20px;
  }

  svg {
    height: 1em;
    vertical-align: text-top;
    width: auto;
  }

  .profileDescription {
    font-size: 0.9em;
  }

  .profileIcon {
    border-radius: 50%;
    max-width: 80%;
    height: auto;
  }

  .iconLink {
    margin-right: 0.2em;
    color: var(--text-color);
    text-decoration: none;
    svg {
      height: 1.5em;
      width: auto;
    }
  }
</style>
