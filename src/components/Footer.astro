---
const { author, lang = "ja" } = Astro.props;

const texts = {
  ja: {
    notice: "本サイトではGoogle AdsenseとAmazonアフィリエイトを使用しています"
  },
  en: {
    notice: "This site uses Google Adsense and Amazon Affiliate"
  }
};

const text = texts[lang] || texts.ja;
---

<footer>
  <p class="notice">
    {text.notice}
  </p>
  <span>
    &copy; {new Date().getFullYear()}
    {author}
  </span>
</footer>

<style lang="scss">
  .notice {
    font-size: 0.8rem;
    color: #666;
    margin: 0.1rem;
  }
  footer {
    text-align: center;
  }
</style>
