---
const { previousPagePath, nextPagePath, currentPage, totalPage, lang = "ja" } = Astro.props;

const texts = {
  ja: {
    previous: "Previous",
    next: "Next"
  },
  en: {
    previous: "Previous", 
    next: "Next"
  }
};

const text = texts[lang] || texts.ja;
---

<div class="pagination">
  {previousPagePath ? <a href={previousPagePath}>{text.previous}</a> : <br />}
  <span>
    {currentPage} / {totalPage}
  </span>
  {nextPagePath ? <a href={nextPagePath}>{text.next}</a> : <br />}
</div>

<style lang="scss">
  .pagination {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.3rem;
    a,
    a:visited {
      color: var(--text-color);
      margin: 0.5rem;
      text-decoration: none;
      text-transform: uppercase;
      font-size: 0.8rem;
      font-weight: 500;
      letter-spacing: 0.05em;
    }
  }
</style>
