---
import BaseLayout from "./BaseLayout.astro";

const { title, siteTitle, description, author, lang = "ja" } = Astro.props;
---

<BaseLayout
  title={title}
  siteTitle={siteTitle}
  description={description}
  author={author}
  lang={lang}
>
  <slot />
</BaseLayout>

<style is:global lang="scss">
  img {
    max-width: 100%;
    width: auto;
    height: auto;
  }
</style>
